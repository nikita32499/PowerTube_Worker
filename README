apt install certbot
certbot certonly --standalone -d worker-dev.smile-baby.ru



cat /etc/letsencrypt/live/worker-dev.smile-baby.ru/privkey.pem /etc/letsencrypt/live/worker-dev.smile-baby.ru/fullchain.pem > ./worker-dev.smile-baby.pem











certbot certonly --standalone -d worker-dev.smile-baby.ru --cert-path ./worker-dev.smile-baby.ru.fullchain.pem --key-path ./worker-dev.smile-baby.ru.privkey.pem -n